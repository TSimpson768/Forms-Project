<%= form_with url: user_path , method: 'patch', model: @user do |form| %>
  <div>
    <% @user.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <%end%>
  </div>
  <%= form.label :username, 'Username:'%>
  <%= form.text_field :username, placeholder: 'Your username' %>
  <%= form.label :email, 'Email:'%>
  <%= form.email_field :email, placeholder: 'example@email.com' %>
  <%= form.label :password, 'Password:'%>
  <%= form.password_field :password, placeholder: '************' %>
  <%= form.submit %>
<%end%>